<div class="item col-5 icon-action">
  <%= clean_link_to(:action => "error_overview") do %>
  <h2>Problems</h2>
  <% end %>
  <table class="collapse-table full_stats">
    <% n = @dataset.logged_error_count(4) %>
    <% error_url, error_options = error_link_options(n, :logged_fatal, :title => "show logged fatals") %>
    <tr class="<%= error_options[:tr_class] %>" data-href="<%= error_url %>" title="<%= error_options[:title] %>">
      <td>fatals</td>
      <td class="number <%= error_options[:class] %>">
        <%= integer_number(n) %>
      </td>
    </tr>
    <% n = @dataset.logged_error_count(3) %>
    <% error_url, error_options = error_link_options(n, :logged_error, :title => "show logged errors (and above)") %>
    <tr class="<%= error_options[:tr_class] %>" data-href="<%= error_url %>" title="<%= error_options[:title] %>">
      <td>errors</td>
      <td class="number <%= error_options[:class] %>">
        <%= integer_number(n) %>
      </td>
    </tr>
    <% n = @dataset.logged_error_count(2) %>
    <% error_url, error_options = error_link_options(n, :logged_warning, :title => "show logged warnings (and above)") %>
    <tr class="<%= error_options[:tr_class] %>" data-href="<%= error_url %>" title="<%= error_options[:title] %>">
      <td>warnings</td>
      <td class="number <%= error_options[:class] %>">
        <%= integer_number(n) %>
      </td>
    </tr>
    <% n = @dataset.exception_count %>
    <% soft_n = @dataset.soft_exception_count %>
    <% error_url, error_options = exception_link_options(n + soft_n, :title => "show exceptions") %>
    <tr class="<%= error_options[:tr_class] %>" data-href="<%= error_url %>" title="<%= error_options[:title] %>">
      <td>exceptions</td>
      <td class="number">
        <span class="<%= error_options[:class] %>"><%= integer_number(n) %></span>
        /
        <span class="warn"><%= integer_number(soft_n) %></span>
      </td>
    </tr>
    <!---
        <% if @dataset.js_exception_count > 0 %>
          <tr>
            <td>javascript exceptions</td>
            <td class="number">
              <%= link_js_exception_list(@dataset.js_exception_count, :class => "error", :title => "show javascript errors") %>
            </td>
          </tr>
        <% end %>
        -->
  </table>
</div>
